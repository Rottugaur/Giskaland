<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Upphafsglugginn">
    
    <!-- Temporary text view -->
    <TextView
        android:id="@+id/tmpText"
        android:text="@string/tmpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70sp"/>

    <!-- Buttons for 4-8 years old -->

    <Button
        android:id="@+id/buttonFourYear"
        android:text="@string/fourYear"
        android:onClick="openFourYearActivity"
        style="@style/button_style"
        android:layout_below="@+id/tmpText"/>

    <Button
        android:id="@+id/buttonFiveYear"
        android:text="@string/fiveYear"
        android:onClick="openFiveYearActivity"
        style="@style/button_style"
        android:layout_below="@+id/tmpText"
        android:layout_toRightOf="@+id/buttonFourYear"/>

    <Button
        android:id="@+id/buttonSixYear"
        android:text="@string/sixYear"
        android:onClick="openSixYearActivity"
        style="@style/button_style"
        android:layout_below="@+id/buttonFourYear"/>

    <Button
        android:id="@+id/buttonSevenYear"
        android:text="@string/sevenYear"
        android:onClick="openSevenYearActivity"
        style="@style/button_style"
        android:layout_below="@+id/buttonFiveYear"
        android:layout_toRightOf="@+id/buttonSixYear"/>

    <Button
        android:id="@+id/buttonEightYear"
        android:text="@string/eightYear"
        android:onClick="openEightYearActivity"
        style="@style/button_style"
        android:layout_below="@+id/buttonSixYear"/>

</RelativeLayout>
